{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "composite": true,
    "noEmit": true,
    "types": [
      "@cloudflare/workers-types/2023-07-01"
    ],
    "baseUrl": ".",
    "paths": {
      "database": ["../../packages/database"]
    }
  },
  "references": [
    { "path": "../../packages/database" }
  ],
  "include": [
    "worker-configuration.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "test",
    "node_modules",
    ".wrangler"
  ]
}
