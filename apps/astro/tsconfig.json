{
  "extends": [
    "astro/tsconfigs/strict",
    "../../tsconfig.base.json"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "database": ["../../packages/database"]
    }
  },
  "references": [
    { "path": "../../packages/database" }
  ],
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".astro/cache"
  ]
}
