---
import type { MailboxSession } from '@/actions'
import { actions } from 'astro:actions'
import { getCollection } from 'astro:content'
import { DomainNoticeBanner } from '@/components/DomainNoticeBanner'
import GenerateNewMailboxForm from '@/components/GenerateNewMailboxForm.astro'
import Inbox from '@/components/Inbox'
import Infomation from '@/components/Infomation.astro'
import LoggedInMailboxForm from '@/components/LoggedInMailboxForm.astro'
import { MailboxAuth } from '@/components/MailboxAuth'
import PageHeader from '@/components/PageHeader.astro'
import Layout from '@/layouts/Layout.astro'

const savedMailbox = Astro.cookies.get('mailbox')?.json() as MailboxSession

const mails = savedMailbox
  ? (await Astro.callAction(actions.getEmailsByMessageToWho, {}))?.data
  : null

// Check if mailbox is claimed
let isClaimed = false
if (savedMailbox?.mailbox) {
  const claimedResult = await Astro.callAction(actions.isMailboxClaimed, {
    address: savedMailbox.mailbox,
  })
  isClaimed = claimedResult?.data || false
}

// Get featured features
const allFeatures = await getCollection('features')
const featuredFeatures = allFeatures
  .filter(f => f.data.featured)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 4)

const Env = Astro.locals.runtime.env
---

<Layout title={`Inbox - ${Env.SITE_NAME}`} description={String(Env.SITE_DESCRIPTION)}>
  <PageHeader
    title={String(Env.SITE_NAME)}
    description="Privacy-friendly temporary email service"
  />

  <main class="mx-auto px-6 md:px-28 py-6">
    <!-- Service Notice Banner -->
    <div class="mb-6 animate-in fade-in duration-500">
      <DomainNoticeBanner client:load />
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Left Sidebar - Information & Controls -->
      <div class="lg:col-span-1 space-y-6 animate-in slide-in-from-left duration-700">
        <Infomation />

        <!-- Mailbox Management Card -->
        <div class="bg-card border border-border rounded-lg shadow-sm">
          <div class="p-6">
            {
              !savedMailbox?.mailbox
? (
                <div class="space-y-6">
                  <!-- Create New Mailbox -->
                  <div>
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">Create Mailbox</h3>
                    <GenerateNewMailboxForm />
                  </div>

                  <!-- Divider -->
                  <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                      <div class="w-full border-t border-border"></div>
                    </div>
                    <div class="relative flex justify-center text-xs uppercase">
                      <span class="bg-card px-2 text-muted-foreground">Or</span>
                    </div>
                  </div>

                  <!-- Login to Existing Mailbox -->
                  <MailboxAuth client:load />
                </div>
              )
: (
                <div>
                  <h3 class="text-lg font-semibold text-card-foreground mb-4">
                    {isClaimed ? 'Your Mailbox' : 'Temporary Mailbox'}
                  </h3>
                  <LoggedInMailboxForm hasMails={(mails?.length || 0) >= 1} />
                </div>
              )
            }
          </div>
        </div>
      </div>

      <!-- Right Content - Inbox -->
      <div class="lg:col-span-2 animate-in slide-in-from-right duration-700">
        <div
          class="bg-card border border-border rounded-lg shadow-sm h-full min-h-[600px] p-6"
        >
          {savedMailbox?.mailbox
? (
            <Inbox
              mails={mails || []}
              mailboxAddress={savedMailbox.mailbox}
              isClaimed={isClaimed}
              client:load
            />
          )
: (
            <div class="flex flex-col items-center justify-center h-full text-center">
              <div class="w-20 h-20 rounded-full bg-muted flex items-center justify-center mb-6">
                <svg class="h-10 w-10 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">Welcome to VMails</h3>
              <p class="text-muted-foreground max-w-md mb-6">
                Create a temporary mailbox to receive emails instantly, or login to your claimed mailbox.
              </p>
              <div class="flex gap-2 text-sm text-muted-foreground">
                <span>‚Üê</span>
                <span>Get started by creating or logging into a mailbox</span>
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </main>
</Layout>
