---
import Layout from '@/layouts/Layout.astro'
import PageHeader from '@/components/PageHeader.astro'
import * as DAO from 'database/dao'
import { getCloudflareD1 } from 'database/db'
import { format } from 'date-fns'
import type { MailboxSession } from '@/actions'
import { encodeJWTSecret } from '@/lib/utils'
import * as jose from 'jose'

const { id } = Astro.params as { id: string }

const db = getCloudflareD1(Astro.locals.runtime.env.DB as D1Database)

let data
let error
let isAuthorized = false

// Get current mailbox session
const savedMailbox = Astro.cookies.get('mailbox')?.json() as MailboxSession

try {
  // Check authorization first before fetching email data
  if (!savedMailbox) {
    error = 'Access denied: No mailbox session found'
  } else {
    try {
      // Verify JWT token
      await jose.jwtVerify(
        savedMailbox.token,
        encodeJWTSecret(String(Astro.locals.runtime.env.JWT_SECRET))
      )
      
      // Get the email only after JWT verification
      data = await DAO.getEmail(db, id)
      if (!data) {
        error = 'Email not found'
      } else {
        // Check if current mailbox matches email recipient
        if (savedMailbox.mailbox === data.messageTo) {
          isAuthorized = true
        } else {
          error = 'Access denied: You can only view emails sent to your mailbox'
          // Clear data to prevent any leakage
          data = null
        }
      }
    } catch (jwtError) {
      error = 'Access denied: Invalid session'
    }
  }
} catch (e) {
  error = e instanceof Error ? e.message : 'Failed to fetch email'
}

const Env = Astro.locals.runtime.env
---

<Layout
  title={`${isAuthorized && data?.subject ? data.subject : 'Protected Email'} - ${Env.SITE_NAME}`}
  description={String(Env.SITE_DESCRIPTION)}
>
  <PageHeader
    title={isAuthorized && data?.subject ? data.subject : 'Protected Email'}
    description={isAuthorized && data ? `From ${data.from.name} (${data.from.address})` : 'Email content is protected'}
    showBackButton={true}
    backUrl="/"
  />

  <main class="max-w-4xl mx-auto px-6 py-6" transition:name="main-content">
    {
      error ? (
        <div class="flex flex-col items-center justify-center text-center p-8">
          <div class="bg-card border border-border rounded-lg shadow-sm p-6 max-w-lg w-full">
            {error.includes('Access denied') ? (
              <div>
                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-amber-100 dark:bg-amber-950/20 flex items-center justify-center">
                  <svg class="w-8 h-8 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-foreground mb-2">Email Protected</h3>
                <p class="text-sm text-muted-foreground mb-6">
                  This email content is protected and can only be viewed by the temporary mailbox owner.
                </p>
                
                <div class="bg-muted/30 rounded-lg p-4 mb-6 text-left">
                  <h4 class="font-medium text-foreground mb-3">To access this email:</h4>
                  <ul class="text-sm text-muted-foreground space-y-2">
                    <li class="flex items-start gap-2">
                      <span class="text-primary mt-0.5">•</span>
                      <span>Use the "Retrieve Mailbox" feature on the homepage</span>
                    </li>
                    <li class="flex items-start gap-2">
                      <span class="text-primary mt-0.5">•</span>
                      <span>Enter your saved Email ID to restore mailbox access</span>
                    </li>
                    <li class="flex items-start gap-2">
                      <span class="text-primary mt-0.5">•</span>
                      <span>Only the original mailbox owner can view protected content</span>
                    </li>
                  </ul>
                  
                  <div class="mt-4 p-3 bg-amber-50 dark:bg-amber-950/20 border border-amber-200 dark:border-amber-800 rounded-md">
                    <div class="flex items-start gap-2">
                      <svg class="w-4 h-4 text-amber-600 dark:text-amber-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                      </svg>
                      <p class="text-xs text-amber-700 dark:text-amber-300">
                        <strong>Important:</strong> Without your Email ID, you cannot access your temporary mailbox again!
                      </p>
                    </div>
                  </div>
                </div>
                
                <a 
                  href="/" 
                  class="inline-flex items-center px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors text-sm font-medium"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                  </svg>
                  Retrieve Mailbox
                </a>
              </div>
            ) : (
              <div>
                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-destructive/10 flex items-center justify-center">
                  <svg class="w-8 h-8 text-destructive" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-foreground mb-2">Email Not Found</h3>
                <p class="text-sm text-muted-foreground mb-6">{error}</p>
                <a 
                  href="/" 
                  class="inline-flex items-center px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors text-sm font-medium"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
                  </svg>
                  Go to Inbox
                </a>
              </div>
            )}
          </div>
        </div>
      ) : (
        data && isAuthorized && (
          <div
            class="prose prose-lg max-w-none dark:prose-invert prose-headings:text-foreground prose-p:text-foreground prose-strong:text-foreground prose-a:text-primary hover:prose-a:text-primary/80"
            transition:name="email-detail"
          >
            <div class="bg-muted/30 rounded-lg p-8">
              <!-- Email Header -->
              <div class="flex items-start justify-between mb-6">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                    <svg class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div class="font-medium text-foreground">{data.from.name}</div>
                    <div class="flex items-center gap-1 mt-1 text-sm text-muted-foreground">
                      <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      <span>{data.from.address}</span>
                    </div>
                  </div>
                </div>
                {
                  data.date && (
                    <div class="text-sm text-muted-foreground flex items-center gap-1 flex-shrink-0">
                      <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      <time datetime={data.date}>
                        {format(new Date(data.date), 'MMM d, yyyy • h:mm a')}
                      </time>
                    </div>
                  )
                }
              </div>

              <!-- Email metadata -->
              <div class="flex items-center gap-4 text-xs text-muted-foreground mb-6 pb-4 border-b border-border">
                <div class="flex items-center gap-1">
                  <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                  </svg>
                  <span>ID: {data.id}</span>
                </div>
              </div>

              <!-- Email Content -->
              <div class="email-content">
                <article
                  class="prose prose-sm max-w-none dark:prose-invert prose-headings:text-foreground prose-p:text-foreground prose-strong:text-foreground prose-a:text-primary hover:prose-a:text-primary/80 prose-blockquote:text-muted-foreground prose-blockquote:border-l-primary/20"
                  set:html={data.html ||
                    data.text?.replace(/\n/g, '<br>') ||
                    '<p class="text-muted-foreground italic">No content available</p>'}
                />
              </div>
            </div>
          </div>
        )
      )
    }
  </main>
</Layout>