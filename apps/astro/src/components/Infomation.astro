---
import { Icon } from 'astro-icon/components'
---

<div class="bg-card border border-border rounded-lg shadow-sm">
  <div class="p-6">
    <h2 class="text-xl font-semibold text-card-foreground mb-6">Virtual Temporary Email</h2>

    <div class="space-y-4">
      <div class="flex items-center gap-3 text-sm">
        <div
          class="flex-shrink-0 w-8 h-8 rounded-full bg-green-100 dark:bg-green-900/20 flex items-center justify-center"
        >
          <Icon class="w-4 h-4 text-green-600 dark:text-green-400" name="ic:twotone-shield" />
        </div>
        <div>
          <div class="font-medium text-card-foreground">Privacy Enhanced</div>
          <div class="text-muted-foreground text-xs">No registration required</div>
        </div>
      </div>

      <div class="flex items-center gap-3 text-sm">
        <div
          class="flex-shrink-0 w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-900/20 flex items-center justify-center"
        >
          <Icon class="w-4 h-4 text-blue-600 dark:text-blue-400" name="ic:twotone-timer" />
        </div>
        <div>
          <div class="font-medium text-card-foreground">1-day expiration</div>
          <div class="text-muted-foreground text-xs">Automatic cleanup</div>
        </div>
      </div>

      <div class="flex items-center gap-3 text-sm">
        <div
          class="flex-shrink-0 w-8 h-8 rounded-full bg-purple-100 dark:bg-purple-900/20 flex items-center justify-center"
        >
          <Icon class="w-4 h-4 text-purple-600 dark:text-purple-400" name="ic:twotone-info" />
        </div>
        <div>
          <div class="font-medium text-card-foreground">Multiple domains</div>
          <div class="text-muted-foreground text-xs">Choose your preferred domain</div>
        </div>
      </div>

      <div class="flex items-center gap-3 text-sm">
        <div
          class="flex-shrink-0 w-8 h-8 rounded-full bg-orange-100 dark:bg-orange-900/20 flex items-center justify-center"
        >
          <Icon class="w-4 h-4 text-orange-600 dark:text-orange-400" name="logos:cloudflare-icon" />
        </div>
        <div>
          <div class="font-medium text-card-foreground">Cloudflare Powered</div>
          <div class="text-muted-foreground text-xs">Global edge network</div>
        </div>
      </div>
    </div>
  </div>
</div>
